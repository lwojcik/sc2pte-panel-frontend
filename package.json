{
  "name": "@sc2pte/panel-frontend",
  "version": "2.0.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@craco/craco": "6.3.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "26.0.24",
    "@types/node": "^16.10.2",
    "@types/react": "17.0.21",
    "@types/react-beautiful-dnd": "13.1.2",
    "@types/react-dom": "17.0.9",
    "@types/react-router-dom": "5.3.0",
    "@types/react-tabs": "2.3.3",
    "@types/react-timeago": "4.1.3",
    "@types/yup": "0.29.13",
    "bestzip": "2.2.0",
    "classnames": "2.3.1",
    "formik": "2.2.9",
    "jest-fetch-mock": "3.0.3",
    "node-sass": "5.0.0",
    "pre-commit": "1.2.2",
    "query-string": "7.0.1",
    "react": "17.0.2",
    "react-beautiful-dnd": "13.1.0",
    "react-dom": "17.0.2",
    "react-router-dom": "5.3.0",
    "react-scripts": "4.0.3",
    "react-stroller": "1.8.0",
    "react-tabs": "3.2.2",
    "react-timeago": "6.2.1",
    "react-twitch-ext-onauthorized": "3.0.1",
    "starcraft2-api": "2.0.0",
    "swr": "0.5.7",
    "typeface-lato": "1.1.13",
    "typescript": "4.4.3",
    "yup": "0.32.11"
  },
  "scripts": {
    "start": "craco start",
    "dev": "npm start",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint */**/*.{ts,tsx} --fix",
    "build": "npm run lint && npm test && craco build && npm run zip",
    "test": "jest",
    "test:watch": "craco test",
    "eject": "react-scripts eject",
    "zip": "cd build; mkdir ../bundle; bestzip ../bundle/bundle.zip *"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "indent": [
        "error",
        2
      ],
      "no-console": [
        "error"
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "no-trailing-spaces": [
        "error"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxEOF": 0
        }
      ],
      "semi": [
        "error",
        "always"
      ],
      "react/jsx-max-props-per-line": [
        "error",
        {
          "maximum": 1,
          "when": "always"
        }
      ],
      "jsx-closing-bracket-location": [
        "error",
        "tag-aligned"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy",
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "./"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
